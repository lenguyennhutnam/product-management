extends ../../layouts/default.pug

block main
  .container.my-3
    .row
      .col-12
        if (product.title)
          h1(class="mb-4") #{product.title}

        if (product.price)
          h5(class="mb-4") <b>Giá:</b> #{product.price}$

        if (product.discountPercentage)
          h5(class="mb-4") <b>Giảm giá:</b> #{product.discountPercentage}%

        if (product.stock)
          h5(class="mb-4") <b>Còn lại:</b> #{product.stock}

        if (product.thumbnail)
          h5(class="mb-4")
            img(
              src=product.thumbnail
              style="width: 100px"
            )

        if (product.status)
          h5(class="mb-4")
            span <b>Trạng thái: </b>
            if (product.status === "active")
              span(class="badge badge-success") Hoạt động
            else
              span(class="badge badge-danger") Dừng hoạt động

        if (product.position)
          h5(class="mb-4") <b>Vị trí:</b> <b>#{product.position}</b>

        if (product.description)
          h5 <b>Mô tả sản phẩm</b>
          div(class="mb-4") !{product.description}