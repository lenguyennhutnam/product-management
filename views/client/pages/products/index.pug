extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
  .container.my-3
    .row
      .col-12
        +box-head("Danh sách sản phẩm")

    .row
      each product in products
        .col-4.mb-3
          .product-item
            .inner-image
              img(src=product.thumbnail alt=product.name)
            .inner-content
              h3.inner-title 
                a(href=`/products/${product.slug}`) #{product.title}
                .inner-price-new #{product.newPrice}$
                .inner-price-old #{product.price}$
                .inner-discount -#{product.discountPercentage}%